<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    tools:context="com.batchmates.android.broadcastreciever.MainActivity">



    <EditText
        android:id="@+id/etEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="recieve"
        android:text="RecieverCheckerManifest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="notManifest"
        android:text="RecieverCheckerNonManifest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="threadClicker"
        android:text="Thread Sending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
