<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    tools:context="com.example.android.mathadd.Main2Activity">

    <TextView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First One"/>

    <TextView
        android:id="@+id/view2"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second One"/>

    <TextView
        android:id="@+id/view3"
        android:layout_marginTop="10sp"
        android:layout_alignLeft="@+id/view2"
        android:layout_below="@id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third One" />

    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/view3"
        android:layout_alignLeft="@+id/view3"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/picture_math"/>

    <Button
        android:id="@+id/swapButton"
        android:layout_below="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Picture Swap"
        android:onClick="Swap"/>

</RelativeLayout>
